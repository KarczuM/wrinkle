= form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :source_id
    = f.text_field :source_id
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :dateline
    = f.text_field :dateline
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :body_html
    = f.text_area :body_html
  .actions
    = f.submit 'Save'
